<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="40sp">


    <TextView
        android:id="@+id/carnumTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/driveTextView2"
        android:layout_alignBottom="@id/linearLayout"

        android:layout_marginTop="-25dp"
        android:layout_marginBottom="151dp"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/nameTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/linearLayout"
        android:layout_marginBottom="45dp"
        android:text="TextView"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/priceTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/linearLayout"
        android:layout_marginBottom="75dp"

        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/carnameTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/linearLayout"
        android:layout_marginBottom="101dp"

        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/linearLayout"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="24dp"
        android:text="Author"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/driveTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/linearLayout"
        android:layout_marginBottom="127dp"

        android:textColor="#000"
        android:textSize="15sp" />



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="108dp"
        android:layout_height="166dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/draw" />

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/quit" />
    </LinearLayout>

</RelativeLayout>